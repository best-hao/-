page{
  height: 100%;
  background-color: #efefef;
}
.search-view{
  width: 100%;
  height: 110rpx;
  padding: 20rpx 25rpx;
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
  background-color: #ffffff;
  font-size: 32rpx;
  margin-top: 20rpx;
}
.search-input{
  flex: 1;
  height: 100%;
  background-color: #efefef;
  padding: 0 20rpx;
  border-radius: 3px;
}
.search-btn{
  width: 150rpx;
  margin-left: 20rpx;
  background-color: #0D82E5;
  color: #ffffff;
  font-size: 32rpx;
  border-radius: 3px;
  padding: 0;
  line-height: 70rpx;
}